{
  "manifest_version": 3,
  "name": "DeveloperTools - Professional Utilities",
  "version": "1.0.0",
  "description": "Privacy-first developer utilities: JSON validator, Base64 encoder/decoder, UUID generator, JWT decoder, color tools, and more. 100% client-side processing.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "app/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "DeveloperTools - Professional Utilities"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/DeveloperTools"
}
